package Looping;

public class Example2 {
public static void main(String[] args) {
	Example2 obj = new Example2();
	obj.Print();
}


private void Print() {
	for(int row=1;row<=7;row++) {
		 for(int col=1;col<=7;col++) {
			if(col==1){
			System.out.print("* ");
		}	
			else if(col+row==5 || col-row==3){
			System.out.print("* ");	
			}
			else{
			 System.out.print(" ");}
		 }
		 System.out.println();
	 }
}
}